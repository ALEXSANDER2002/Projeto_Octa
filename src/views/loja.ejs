        }

        .payment-method i {
            font-size: 32px;
            color: #007bff;
            margin-bottom: 15px;
        }

        .payment-method h4 {
            margin: 0;
            color: #333;
            font-size: 18px;
        }

        .payment-method p {
            margin: 8px 0 0;
