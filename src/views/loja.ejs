        }

        .pix-container {
            text-align: center;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 12px;
        }

        .pix-container .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        .pix-container .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #333;
            font-weight: 500;
        }

        .pix-container .form-group input {
            width: 100%;
            padding: 12px;
