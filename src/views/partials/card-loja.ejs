<div class="card-loja">
    <div class="image-placeholder">
        <img src="<%= imagem %>" alt="<%= nome %>" loading="lazy">
    </div>
    <h2><%= nome %></h2>
    <p class="price"><span class="old-price">DE: R$ <%= precoAntigo.toFixed(2).replace('.', ',') %></span></p>
    <p class="price"><span class="new-price">POR: R$ <%= precoNovo.toFixed(2).replace('.', ',') %></span></p>
    <button class="btn btn-comprar" 
            data-produto-nome="<%= nome %>" 
            data-produto-preco="<%= precoNovo.toFixed(2) %>" 
            data-produto-imagem="<%= imagem %>">
        <i class="fas fa-credit-card"></i> Comprar com Mercado Pago
    </button>
    <a href="https://wa.me/5594992760247?text=OlÃ¡, gostaria de comprar o <%= nome %>" class="btn btn-whatsapp">
        <i class="fab fa-whatsapp"></i> Comprar via WhatsApp
    </a>
</div>