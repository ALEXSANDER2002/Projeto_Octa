<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sala de Troféus</title>
    <link rel="stylesheet" href="/CSS/default.css">
    <link rel="stylesheet" href="/CSS/header.css">
    <link rel="stylesheet" href="/CSS/footer.css">
    <link rel="stylesheet" href="/CSS/titulo.css">
    <link rel="stylesheet" href="/CSS/evento.css">
    <link rel="stylesheet" href="/CSS/whatsapp.css">
</head>
<body>
<!-- Importando o header -->
<%- include('partials/header') %>

<h1>Eventos</h1>

<section class="evento-container">
    <% if (typeof eventos !== 'undefined' && eventos.length > 0) { %>
        <% eventos.forEach(function(evento) { %>
            <div class="evento-card">
                <% if (evento.imagem.endsWith('.mp4')) { %>
                    <video controls>
                        <source src="<%= evento.imagem %>" type="video/mp4">
                        Seu navegador não suporta o elemento de vídeo.
                    </video>
                <% } else { %>
                    <%- include('partials/evento', { imagem: evento.imagem, titulo: evento.title }) %>
                <% } %>
                <p class="evento-titulo"><%= evento.title %></p>
            </div>
        <% }); %>
    <% } %>
</section>




<%- include('partials/footer') %>

<%- include('partials/botao-whatsapp') %>
</body>
</html>
